<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:padding="5px" android:id="@+id/category_row"
	android:layout_height="wrap_content"
>
	<TextView android:id="@+id/category_subject" style="@style/subjectText"
		android:layout_width="fill_parent" android:layout_toLeftOf="@+id/categoryDetailBtn"
		android:layout_height="wrap_content" android:ellipsize="end" android:text="카테고리1"
		android:lines="1" android:layout_centerInParent="true"
	></TextView>
	<ImageButton android:layout_alignParentRight="true"
		android:id="@+id/categoryDetailBtn" 
		android:background="@drawable/ic_menu_forward"
		android:layout_height="30dp"
		android:layout_width="30dp"
	></ImageButton>
	
</RelativeLayout>