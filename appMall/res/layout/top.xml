<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/top_bg"
	android:layout_height="30px"
	android:layout_gravity="top" android:gravity="top"
>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/topTitle"
		android:text="제목" android:textSize="14px"
		android:textStyle="bold" android:typeface="sans"
		android:shadowColor="#999999"
		android:shadowRadius="1" android:textColor="#000000"
		android:paddingLeft="5px"
		android:layout_centerVertical="true" /><!--
	<ProgressBar
		android:layout_centerVertical="true" android:id="@+id/loadingTop"
		android:layout_centerHorizontal="true"
		android:layout_height="30dp"
		android:layout_width="30dp" android:visibility="invisible"
	></ProgressBar>
	--><TextView android:layout_centerVertical="true"
	android:layout_centerHorizontal="true"
		android:id="@+id/loadingTop" android:text="Loading..."
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="12dp" android:visibility="invisible"></TextView>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerVertical="true"
		android:id="@+id/topBtnLayout"
		android:layout_alignParentRight="true"
	>
		<ImageView android:id="@+id/equal_bg"
			android:gravity="center" android:background="@drawable/anim_sound"
			android:layout_alignParentRight="true"
			android:layout_gravity="right|center_vertical"
			android:layout_centerVertical="true"
			android:layout_height="18px"
			android:layout_width="16px"
			android:layout_marginRight="5px" />
		<ImageView android:id="@+id/play_btn"
			android:background="@drawable/audio_btn"
			android:layout_alignParentRight="true"
			android:layout_gravity="right|center_vertical"
			android:layout_centerVertical="true"
			android:layout_height="17px"
			android:layout_width="16px"
			android:layout_marginRight="5px" />
		<ImageButton android:id="@+id/top_arrow_left"
			android:background="@drawable/top_arrow_left"
			android:layout_gravity="right|center_vertical"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_height="24px"
			android:layout_width="24px" />
		<ImageButton android:id="@+id/top_arrow_right"
			android:background="@drawable/top_arrow_right"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10px"
			android:layout_centerVertical="true"
			android:layout_height="24px"
			android:layout_width="24px" />
	</LinearLayout>


</RelativeLayout>